[Unit]
Description=MilkPi Player
After=network.target avahi-daemon.service

[Service]
Type=simple
User=%i
WorkingDirectory=/opt/milkpi/player
ExecStart=/opt/milkpi/venv/bin/python opt/milkpi/player/player.py
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target